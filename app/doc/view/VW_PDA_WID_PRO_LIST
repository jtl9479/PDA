[생산투입 계근시 사용]

  CREATE OR REPLACE FORCE EDITIONABLE VIEW "INNO"."VW_PDA_WID_PRO_LIST" ("GI_H_ID", "GI_D_ID", "EOI_ID", "ITEM_CODE", "ITEM_NAME", "EMARTITEM_CODE", "EMARTITEM", "GI_REQ_PKG", "GI_REQ_QTY", "AMOUNT", "GOODS_R_ID", "GR_REF_NO", "GI_REQ_DATE", "BL_NO", "BRAND_CODE", "BRANDNAME", "CLIENT_CODE", "CLIENTNAME", "CENTERNAME", "ITEM_SPEC", "CT_CODE", "IMPORT_ID_NO", "PACKER_CODE", "PACKERNAME", "PACKER_PRODUCT_CODE", "BARCODE_TYPE", "ITEM_TYPE", "PACKWEIGHT", "BARCODEGOODS", "STORE_IN_DATE", "GR_WAREHOUSE_CODE", "EMARTLOGIS_CODE", "EMARTLOGIS_NAME") AS
  SELECT B.GI_H_ID                   				AS GI_H_ID
     , B.GI_D_ID                   				AS GI_D_ID
     , '1111'									AS EOI_ID
     , B.ITEM_CODE                 				AS ITEM_CODE
     , I.ITEM_NAME_KR							AS ITEM_NAME
     , B.ITEM_CODE                 				AS EMARTITEM_CODE
	 , I.ITEM_NAME_KR							AS EMARTITEM
     , B.GI_REQ_PKG                				AS GI_REQ_PKG
     , B.GI_REQ_QTY                				AS GI_REQ_QTY
     , R.AMOUNT									AS AMOUNT
     , B.GOODS_R_ID                				AS GOODS_R_ID
     , R.GI_D_ID 	 							AS GR_REF_NO
     , A.GI_REQ_DATE               				AS GI_REQ_DATE
     , B.BL_NO                     				AS BL_NO
     , R.BRAND_CODE                      		AS BRAND_CODE
     , (SELECT CODE_NAME
          FROM B_COMMON_CODE
         WHERE MASTER_CODE = 'BRAND'
           AND CODE        = R.BRAND_CODE)      AS BRANDNAME
     , A.CLIENT_CODE               				AS CLIENT_CODE
     , (SELECT CLIENT_FNAME
          FROM B_CLIENT
         WHERE CLIENT_CODE = A.CLIENT_CODE)		AS CLIENTNAME
     , '하이랜드푸드'								AS CENTERNAME
     , R.ITEM_SPEC								AS ITEM_SPEC
     , R.CT_CODE								AS CT_CODE
     , DECODE(B.IMPORT_ID_NO,NULL,'0000'
     		 ,B.IMPORT_ID_NO)					AS IMPORT_ID_NO
     , D.PACKER_CODE							AS PACKER_CODE
     , DE_CLIENT (D.PACKER_CODE)				AS PACKERNAME
     , DECODE(D.PACKER_PRODUCT_CODE,NULL
     		 ,'0000',D.PACKER_PRODUCT_CODE) 	AS PACKER_PRODUCT_CODE
     , 'P0' 									AS BARCODE_TYPE
     , DECODE(I.ITEM_TYPE,10,'S','J')			AS ITEM_TYPE
     , I.PACK_WEIGHT							AS PACKWEIGHT
 	 , DECODE(D.PACKER_PRODUCT_CODE,NULL
 	 		 ,'0000000',(SELECT BARCODEGOODS
                        FROM S_BARCODE_INFO S
                   	   WHERE S.PACKER_CLIENT_CODE = D.PACKER_CODE
                         AND S.PACKER_PRODUCT_CODE = D.PACKER_PRODUCT_CODE
                         AND S.status = 'Y'))	AS BARCODEGOODS
     , A.GI_DATE 								AS STORE_IN_DATE
     , R.GR_WAREHOUSE_CODE						AS GR_WAREHOUSE_CODE
     , '0000000'								AS EMARTLOGIS_CODE
     , '정보없음'									AS EMARTLOGIS_NAME
  FROM W_GOODS_IH A
     , W_GOODS_ID B
     , W_GOODS_R R
     , I_OFFER_D D
     , B_ITEM I
 WHERE A.GI_H_ID = B.GI_H_ID
   AND B.GOODS_R_ID = R.GOODS_R_ID
   AND R.BL_D_ID = D.OFFER_D_ID
   AND B.ITEM_CODE = I.ITEM_CODE
   AND A.GI_TYPE = 'M1'
   AND A.SEND_FLAG = 'N'
   AND R.CONTRACT_TYPE = '40'
   AND B.STATUS = '10'
   AND B.PACKING_QTY = 0
   AND B.GI_REQ_PKG <> 0
   AND B.PROC_DATE IS NULL
   AND NVL(B.PROC_PUT_FLAG,'N') = 'N'
   AND A.GI_REQ_DATE >= TO_CHAR(SYSDATE,'YYYYMMDD');